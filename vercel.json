{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "vapid/**",
          "public/**"
        ]
      }
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/dashboard", 
      "dest": "server/server.js",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    { 
      "src": "/login", 
      "dest": "server/server.js",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    { 
      "src": "/vapidPublicKey", 
      "dest": "server/server.js",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    { "src": "/subscribe", "dest": "server/server.js" },
    { "src": "/sendNotification", "dest": "server/server.js" },
    { "src": "/health", "dest": "server/server.js" },
    { 
      "src": "/sw.js", 
      "dest": "public/sw.js",
      "headers": {
        "Cache-Control": "no-cache",
        "Service-Worker-Allowed": "/"
      }
    },
    { 
      "src": "/browserconfig.xml", 
      "dest": "public/browserconfig.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "public, max-age=86400"
      }
    },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "NODE_ENV": "production",
    "CURRENT_USER": "Guilhermeeae",
    "TIMESTAMP": "2025-08-25 11:07:03"
  }
}
