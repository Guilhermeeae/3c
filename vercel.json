{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/dashboard", "dest": "server/server.js" },
    { "src": "/vapidPublicKey", "dest": "server/server.js" },
    { "src": "/subscribe", "dest": "server/server.js" },
    { "src": "/sendNotification", "dest": "server/server.js" },

    { "src": "/", "dest": "public/index.html" },
    { "src": "/.*", "dest": "public/index.html" }
  ]
}
