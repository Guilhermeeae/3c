  ],
  "categories": ["education", "productivity"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard", 
      "url": "/dashboard",
      "description": "Acessar painel de controle",
      "icons": [
        {
          "src": "/icon.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/icon.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Tela inicial do aplicativo de notificações"
    },
    {
      "src": "/icon.png", 
      "sizes": "750x1334",
      "type": "image/png",
      "platform": "narrow",
      "label": "Versão mobile do app"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+3cnotif",
      "url": "/?handler=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"]
      }
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
